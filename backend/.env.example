# Smart Gallery Backend Configuration

# Debug mode
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000

# ML Settings
DEVICE=cuda  # cuda or cpu
YOLO_CONFIDENCE=0.25
FACE_DET_THRESH=0.5
FACE_SIM_THRESH=0.6

# CLIP Model
CLIP_MODEL=ViT-L-14
CLIP_PRETRAINED=openai

# Paths (optional - defaults to ./data)
# DATA_DIR=/path/to/data
# PHOTOS_DIR=/path/to/photos
# THUMBNAILS_DIR=/path/to/thumbnails
# EMBEDDINGS_DIR=/path/to/embeddings

# Custom YOLO model (optional)
# YOLO_MODEL_PATH=/path/to/yolo/best.pt

# Database (optional - defaults to SQLite)
# DATABASE_URL=sqlite+aiosqlite:///./data/gallery.db
